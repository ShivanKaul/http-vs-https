{
  "name": "HTTPvHTTPS",
  "short_name": "HTTPvHTTPS",
  "description": "Ever wondered what proportion of websites you visit are HTTP v. HTTPS?",
  "version": "0.0.1",
  "permissions": [
      "tabs",
      "storage"
  ],
  "icons": {
    "16": "assets/icon-16.png",
    "24": "assets/icon-24.png",
    "32": "assets/icon-32.png",
    "128": "assets/icon-128.png"
  },
  "background": {
    "scripts": [
      "src/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "HTTP vs HTTPS",
    "default_icon": "assets/icon-16.png",
    "default_title": "HTTPvHTTPS: Check what proportion of websites you visit are HTTP v HTTPS",
    "default_popup": "src/display.html"

  },
  "manifest_version": 2
}
